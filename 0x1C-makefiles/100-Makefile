CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
ERRORS = $(CFLAGS)

ifneq ($(wildcard m.h),)
.PHONY: all clean oclean fclean
all: $(SRC:.c=.o)
	$(CC) $(ERRORS) $(SRC:.c=.o) -o $(NAME)
clean:
	$(RM) *~ $(NAME)
oclean:
	$(RM) $(OBJ)
fclean: clean oclean

re: oclean all
endif
